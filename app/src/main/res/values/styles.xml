<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EqualsButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/equals_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="OperatorButton" parent="RoundButton">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>
</resources>